{
    "name": "phly/phly-expressive-mustache",
    "description": "Mustache TemplateInterface implementation for zend-expressive",
    "keywords": ["mustache", "expressive"],
    "homepage": "https://github.com/phly/phly-expressive-mustache",
    "type": "library",
    "license": "BSD-2-Clause",
    "authors": [
        {
            "name": "Matthew Weier O'Phinney",
            "email": "matthew@weierophinney.net",
            "homepage": "https://mwop.net/"
        }
    ],
    "require": {
        "php": "^5.6 || ^7.0",
        "phly/phly-mustache": "^2.0",
        "zendframework/zend-expressive-helpers": "^1.4 || ^2.2 || ^3.0.1",
        "zendframework/zend-expressive-template": "^1.0.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^5.7 || ^6.0",
        "squizlabs/php_codesniffer": "^2.3.1",
        "psr/container": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Phly\\Expressive\\Mustache\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "PhlyTest\\Expressive\\Mustache\\": "test/"
        }
    },
    "scripts": {
        "test": [
            "phpunit"
        ],
        "cs": [
            "phpcs"
        ],
        "cs-fix": [
            "phpcbf"
        ],
        "check": [
            "@cs",
            "@test"
        ]
    }
}
